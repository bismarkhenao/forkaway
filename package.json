{
  "name": "forkaway",
  "version": "1.0.0",
  "description": "A CLI tool to manage and remove GitHub fork repositories safely and interactively",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "forkaway": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "NODE_OPTIONS='--loader ts-node/esm' node src/index.ts",
    "dev": "NODE_OPTIONS='--loader ts-node/esm' ts-node-dev --respawn src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "github",
    "fork",
    "cleanup",
    "cli",
    "repository",
    "management",
    "delete",
    "remove",
    "interactive",
    "git",
    "github-forks",
    "fork-manager",
    "fork-cleanup",
    "fork-remover",
    "github-tools",
    "repository-management",
    "github-api",
    "forked-repos",
    "clean",
    "automation",
    "typescript",
    "node",
    "cli-tool",
    "terminal",
    "command-line",
    "github-automation",
    "repo-cleaner",
    "bulk-delete",
    "fork-pruner"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bismarkhenao/forkaway.git"
  },
  "bugs": {
    "url": "https://github.com/bismarkhenao/forkaway/issues"
  },
  "homepage": "https://github.com/bismarkhenao/forkaway#readme",
  "dependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.24",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.4.7",
    "inquirer": "^9.2.15",
    "inquirer-autocomplete-prompt": "^3.0.1",
    "octokit": "^4.1.2",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/inquirer-autocomplete-prompt": "^3.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16"
