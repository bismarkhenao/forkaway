{
  "name": "forkaway",
  "version": "1.0.0",
  "description": "A CLI tool to help you clean up your GitHub fork repositories efficiently",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "forkaway": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "NODE_OPTIONS='--loader ts-node/esm' node src/index.ts",
    "dev": "ts-node src/index.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "github",
    "fork",
    "cleanup",
    "cli",
    "repository",
    "management",
    "delete",
    "bulk",
    "interactive"
  ],
  "author": "Bismark Henao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bismarkhenao/forkaway.git"
  },
  "bugs": {
    "url": "https://github.com/bismarkhenao/forkaway/issues"
  },
  "homepage": "https://github.com/bismarkhenao/forkaway#readme",
  "dependencies": {
    "@octokit/rest": "^19.0.0",
    "@types/cli-progress": "^3.11.5",
    "@types/inquirer": "^8.2.0",
    "@types/node": "^18.0.0",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.0.0",
    "inquirer": "^8.2.0",
    "inquirer-autocomplete-prompt": "^2.0.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/inquirer-autocomplete-prompt": "^3.0.3",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.0"
  },
  "engines": {
    "node": ">=16"
  }
}
