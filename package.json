{
  "name": "forkaway",
  "version": "1.0.2",
  "description": "A CLI tool to help you clean up your GitHub fork repositories efficiently",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "forkaway": "./bin/cli.js"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "NODE_OPTIONS='--loader ts-node/esm' node src/index.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "NODE_OPTIONS='--no-warnings --experimental-vm-modules' jest",
    "release": "standard-version"
  },
  "keywords": [
    "github",
    "fork",
    "cleanup",
    "cli",
    "repository",
    "management",
    "delete",
    "bulk",
    "interactive"
  ],
  "author": "Bismark Henao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bismarkhenao/forkaway.git"
  },
  "bugs": {
    "url": "https://github.com/bismarkhenao/forkaway/issues"
  },
  "homepage": "https://github.com/bismarkhenao/forkaway#readme",
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.4.0",
    "inquirer": "^8.2.6",
    "inquirer-autocomplete-prompt": "^2.0.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.5",
    "@types/inquirer": "^8.2.0",
    "@types/inquirer-autocomplete-prompt": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16"
  }
}
